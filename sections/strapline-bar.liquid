<style>
  #Strapline-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .strapline-bar {
      background-color: var(--color-primary);
      padding: {{ section.settings.padding }}px 0;
      text-align: center;
      font-size: {{ section.settings.font_size }}px;
      color: {{ section.settings.text_color }};
      letter-spacing: {{ section.settings.letter_spacing }}px;
      font-weight: {{ section.settings.font_weight }};
  }

  .strapline-bar p {
      margin: 0;
  }
</style>

<div id="Strapline-{{ section.id }}" class="strapline-bar">
  <p>{{ section.settings.message }}</p>
</div>

{% schema %}
{
  "name": "Strapline Bar",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "Welcome to our store!"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "default": "400",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-Bold" },
        { "value": "700", "label": "Bold" }
      ]
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "Letter Spacing",
      "default": 3,
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "default": 16,
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Section Margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin",
      "default": 0,
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom Margin",
      "default": 0,
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px"
    }
  ]
}
{% endschema %}
